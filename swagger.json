{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Hedera Starter Project",
    "description": "Hashgraph Interaction API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/hedera": {
      "get": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Get Hedera Account in system",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/account/{initialBalance}": {
      "get": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Get Hedera Account in system",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Create an account on hedera with certain balance (transferred from default account).",
        "parameters": [
          {
            "name": "initialBalance",
            "in": "path",
            "description": "add this much tinyBars to the user.",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/topic": {
      "post": {
        "tags": [
          "HCS"
        ],
        "summary": "Create a HCS Topic",
        "responses": {
          "200": {
            "description": "Topic ID",
            "examples": {
              "Topic ID": "00000.111"
            }
          }
        }
      }
    },
    "/submitMessage": {
      "post": {
        "tags": [
          "HCS"
        ],
        "summary": "Submit a message to a topic",
        "parameters": [
          {
            "in": "query",
            "name": "topicId",
            "type": "string",
            "default": "0.0.3120640",
            "description": "0.0.3120640"
          },
          {
            "in": "query",
            "name": "message",
            "type": "string",
            "default": "Hello Duy!",
            "description": "test"
          }
        ],
        "responses": {
          "200": {
            "description": "success or failure"
          }
        }
      }
    },
    "/subscribe": {
      "post": {
        "tags": [
          "HCS"
        ],
        "summary": "Subscribe Mirror Node to a topicId. Updates to topics will be printed to the console.",
        "parameters": [
          {
            "in": "query",
            "name": "topicId",
            "type": "string",
            "default": "0.0.3120640",
            "description": "0.0.3120640"
          }
        ],
        "responses": {
          "200": {
            "description": "success or failure"
          }
        }
      }
    },
    "/topic/{topicId}": {
      "get": {
        "tags": [
          "HCS"
        ],
        "summary": "Get info on a topic",
        "parameters": [
          {
            "name": "topicId",
            "in": "path",
            "description": "topicId",
            "type": "string",
            "default": "0.0.2117",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "TopicInfo",
            "schema": {
              "$ref": "#/definitions/TopicInfo"
            }
          }
        }
      }
    },
    "/file": {
      "post": {
        "tags": [
          "File controller"
        ],
        "summary": "Create a File.",
        "parameters": [
          {
            "in": "query",
            "required": true,
            "name": "text",
            "type": "string",
            "default": "Testing",
            "description": "Adding text to file..."
          }
        ],
        "responses": {
          "200": {
            "description": "File ID"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "name",
        "_id",
        "companies"
      ],
      "properties": {
        "_id": {
          "type": "integer",
          "uniqueItems": true
        },
        "isPublic": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "books": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              }
            }
          }
        },
        "companies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "TopicInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "object",
          "properties": {
            "shard": {
              "type": "number"
            },
            "realm": {
              "type": "number"
            },
            "topic": {
              "type": "number"
            }
          }
        },
        "topicMemo": {
          "type": "string"
        },
        "runningHash": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "sequenceNumber": {
          "type": "number"
        },
        "expirationTime": {
          "type": "string"
        },
        "adminKey": {
          "type": "string"
        },
        "submitKey": {
          "type": "string"
        },
        "autoRenewPeriod": {
          "type": "string"
        },
        "autoRenewAccountId": {
          "type": "string"
        }
      }
    }
  }
}
