{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Hedera Starter Project",
    "description": "Hashgraph Interaction API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/hedera": {
      "get": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Get Hedera Account in system",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/account/{initialBalance}": {
      "get": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Get Hedera Account in system",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Create an account on hedera with certain balance (transferred from default account).",
        "parameters": [
          {
            "name": "initialBalance",
            "in": "path",
            "description": "add this much tinyBars to the user.",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/account/info/{accountId}": {
      "get": {
        "tags": [
          "Hedera Account"
        ],
        "summary": "Get account info",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/topic": {
      "post": {
        "tags": [
          "HCS"
        ],
        "summary": "Create a HCS Topic",
        "responses": {
          "200": {
            "description": "Topic ID",
            "examples": {
              "Topic ID": "00000.111"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "name",
        "_id",
        "companies"
      ],
      "properties": {
        "_id": {
          "type": "integer",
          "uniqueItems": true
        },
        "isPublic": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "books": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              }
            }
          }
        },
        "companies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    }
  }
}
